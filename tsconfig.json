{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "module": "ESNext",
    "esModuleInterop": true,
    "rootDir": "./src",
    "strict": true,
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
  },
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}